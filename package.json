{
  "name": "reward-chest",
  "version": "1.0.0",
  "description": "Proof of concept for reward chests on-chain",
  "repository": "https://github.com/Chiiro999/reward-chest.git",
  "author": "",
  "license": "MIT",
  "types": "types/index.ts",
  "files": [
    "abi",
    "artifacts",
    "contracts",
    "lib",
    "utils",
    "types"
  ],
  "scripts": {
    "build": "yarn compile && yarn export",
    "compile": "hardhat compile",
    "export": "hardhat export-abi",
    "clear": "hardhat clear-abi",
    "clean": "hardhat clean",
    "lint": "yarn prettier && solhint -c .solhint.json contracts/**/*.sol",
    "dev": "hardhat node --watch",
    "test": "hardhat test",
    "test:gas": "cross-env REPORT_GAS=1 hardhat test",
    "test:fast": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "goerli:deploy": "hardhat --network goerli deploy",
    "goerli:run": "hardhat --network goerli run",
    "goerli:sourcify": "hardhat --network goerli sourcify",
    "goerli:verify": "hardhat --network goerli verify",
    "mainnet:deploy": "hardhat --network mainnet deploy",
    "mainnet:run": "hardhat --network mainnet run",
    "mainnet:sourcify": "hardhat --network mainnet sourcify",
    "mainnet:verify": "hardhat --network mainnet verify"
  },
  "devDependencies": {
    "@ethereum-waffle/chai": "^3.2.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.3.2",
    "@openzeppelin/contracts-upgradeable": "4.3.2",
    "@openzeppelin/hardhat-upgrades": "^2.3.1",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.2.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^8.2.3",
    "@types/node": "^15.14.5",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^6.8.0",
    "hardhat": "^2.5.0",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-dependency-compiler": "^1.1.1",
    "hardhat-deploy": "^0.8.11",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.9",
    "solc": "0.8.9",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "4.4.4"
  }
}
